[advice]
  diverging = false

[alias]
  files = "!git diff --name-only $(git merge-base HEAD \"${REVIEW_BASE:-main}\")"
  stat = "!git diff --stat $(git merge-base HEAD \"${REVIEW_BASE:-main}\")"
  oui = "!git commit -m \"wip: $(curl -s https://whatthecommit.com/index.txt)\""

[branch]
  sort = "-committerdate"

[commit]
  gpgSign = false
  verbose = true

[core]
  excludesfile = ~/.gitignore
  fsmonitor = true
  hookspath = "/dev/null"
  untrackedCache = true
  attributesfile = ~/.gitattributes

[diff]
  algorithm = "histogram"
  colorMoved = "plain"
  mnemonicPrefix = true
  renames = true
  tool = difftastic

[diff "sqlite3"]
  binary = true
  textconv = "echo .dump | sqlite3"

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[difftool "vscode"]
  cmd = code --wait --diff "$LOCAL" "$REMOTE"

[fetch]
  all = true
  prune = true
  pruneTags = true

[init]
  defaultBranch = main

;[interactive]
;  diffFilter = delta --color-only

[pager]
  difftool = true

[pull]
  rebase = true

[push]
  default = simple
  autoSetupRemote = true
  followTags = true

[merge]
  conflictstyle = diff3

[merge "mergiraf"]
    name = mergiraf
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L

[mergetool "vscode"]
  cmd = "code --wait --reuse-window $MERGED"

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[rerere]
  autoupdate = true
  enabled = true

[tag]
  sort = "version:refname"

